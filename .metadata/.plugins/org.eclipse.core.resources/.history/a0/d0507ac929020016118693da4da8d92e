package ie.dit;

public class LinkedList {
	public Link firstLink;
	
	LinkedList() {
		firstLink = null;
	}
	
	public boolean isEmpty() {
		return(firstLink == null);
	}
	
	public void insertLink(int value) {
		Link newLink = new Link(value);
		newLink.next = firstLink;
		firstLink = newLink;
	}
	
	public void display() {
		Link displaylink = firstLink;
		while(displaylink != null) {
			displaylink.display();
			displaylink = displaylink.next;
		}
	}
	
	public Link getElement(int postion) {
		Link getElement = firstLink;
		int count = 0;
		
		if(!isEmpty()) {
			while(getElement != null) {
				if(count == postion) {
					break;
				} else {
					getElement = getElement.next;
					count ++;
				}
			}
			
		} else {
			System.out.println("Linked List is empty");
		}
		return getElement;
		
	}
}
